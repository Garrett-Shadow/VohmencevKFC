<Page x:Class="Vohmencev_KFC_App.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Vohmencev_KFC_App.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="WhiteSmoke">
        <Label x:Name="AppLabel" Content="KFC" FontFamily="Segoe UI Black" FontSize="45" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,5,5" Width="100"/>
        <Image x:Name="AppLogo" Source="kfc logo.png" Margin="250,100,250,150"/>
        <Button x:Name="ClientButton" Content="Клиент" Background="White" HorizontalAlignment="Left" VerticalAlignment="Top" Width="151" Height="50" FontSize="20" Margin="175,324,0,0" Click="ClientButton_Click"/>
        <Button x:Name="StaffButton" Content="Сотрудник" Background="White" HorizontalAlignment="Right" VerticalAlignment="Top" Width="151" Height="50" FontSize="20" Margin="0,324,175,0" Click="StaffButton_Click"/>
        
    </Grid>
</Page>
